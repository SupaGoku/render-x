{
  "name": "@render-x/core",
  "version": "1.0.0",
  "description": "Render-X micro JSX runtime with DOM renderer",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "index": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./jsx-runtime": {
      "jsx-runtime": "./dist/jsx-runtime.js",
      "types": "./dist/jsx-runtime.d.ts",
      "default": "./dist/jsx-runtime.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && rollup --config rollup.config.js",
    "watch": "rollup --config rollup.config.js --watch",
    "pub": "yarn build && yarn publish",
    "test": "vitest run --coverage",
    "bench": "node scripts/benchmarks/diff-performance.js",
    "test:bench": "yarn bench"
  },
  "dependencies": {
    "csstype": "3.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-terser": "0.4.4",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "0.25.9",
    "happy-dom": "18.0.1",
    "jsdom": "^27.0.0",
    "prettier": "3.5.3",
    "rollup": "4.50.2",
    "rollup-plugin-dts": "6.1.1",
    "rollup-plugin-esbuild": "6.2.1",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
